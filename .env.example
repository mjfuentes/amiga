# Session Settings
SESSION_TIMEOUT_MINUTES=60

# Cost Limits
DAILY_COST_LIMIT=100
MONTHLY_COST_LIMIT=1000

# Claude Code Settings
CLAUDE_CLI_PATH=claude
WORKSPACE_PATH=/path/to/your/repos

# Anthropic API (for Claude API question answering)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Anthropic Admin API (for Usage and Cost API - optional)
# Required for syncing actual usage data from Anthropic
# Admin API keys start with sk-ant-admin...
ANTHROPIC_ADMIN_API_KEY=your_admin_api_key_here

# Logging
LOG_LEVEL=INFO

# Database Configuration (optional - uses defaults if not set)
# AMIGA_DATA_DIR=/custom/path/to/data  # Override default data directory (default: {project_root}/data)
# AMIGA_DB_PATH=/custom/path/to/db     # Override database path (default: {data_dir}/amiga.db)

# Monitoring Server Settings
MONITORING_AUTO_RESTART=true  # Auto-restart on file changes (disable in production)
