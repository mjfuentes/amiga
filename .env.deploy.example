# Remote Deployment Configuration
# Copy to .env.deploy and fill in your values

# DigitalOcean API Token (required)
# Get from: https://cloud.digitalocean.com/account/api/tokens
DIGITALOCEAN_TOKEN=your_digitalocean_token_here

# Domain Configuration (required)
# This will be the public URL for your AMIGA instance
DOMAIN_NAME=amiga.yourdomain.com

# Server Configuration (optional - defaults provided)
DROPLET_NAME=amiga-production
DROPLET_REGION=nyc3
DROPLET_SIZE=s-2vcpu-2gb
DROPLET_IMAGE=ubuntu-22-04-x64

# SSH Key (optional - will create if not exists)
SSH_KEY_NAME=amiga-deploy-key
SSH_KEY_PATH=~/.ssh/amiga_deploy_ed25519

# Application Configuration (copied to remote .env)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_ADMIN_API_KEY=your_admin_api_key_here
WORKSPACE_PATH=/opt/amiga
DAILY_COST_LIMIT=100
MONTHLY_COST_LIMIT=1000
SESSION_TIMEOUT_MINUTES=60
LOG_LEVEL=INFO
MONITORING_AUTO_RESTART=false

# Deployment Settings
REMOTE_USER=amiga
INSTALL_PATH=/opt/amiga
BACKUP_RETENTION_DAYS=30
